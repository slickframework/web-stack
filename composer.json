{
  "name": "slick/webstack",
  "description": "PSR-15 HTTP middleware stack that can help you create web applications or web services for HTTP protocol.",
  "minimum-stability": "dev",
  "license": "MIT",
  "keywords": [
    "slick",
    "PSR-15",
    "PSR-7",
    "http"
  ],
  "authors": [
    {
      "name": "Filipe Silva",
      "email": "silvam.filipe@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Slick\\WebStack\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Features\\App\\": "features/app/src"
    }
  },
  "require": {
    "php": ">=8.0",
    "ext-yaml": "*",
    "aura/router": "^3.0",
    "slick/configuration": "^1.2",
    "slick/di": "^2.5",
    "slick/http": "^2.1||^3.0",
    "slick/template": "^2.0",
    "symfony/yaml": ">=3.4",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "behat/mink-goutte-driver": "^1.2",
    "phpspec/phpspec": "^8.0@dev",
    "squizlabs/php_codesniffer": "^3.0@dev"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.3-dev",
      "dev-develop": "1.4-dev"
    }
  },
  "scripts": {
    "test": "phpspec run -fdot",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
